% Definición de Colores
\definecolor{tblProbColor}{rgb}{1.0, 0.4, 0.4}
\definecolor{tblReqColor}{rgb}{0.3, 0.5, 0.8}
\definecolor{userColor}{rgb}{0.2, 0.7, 0.2}

